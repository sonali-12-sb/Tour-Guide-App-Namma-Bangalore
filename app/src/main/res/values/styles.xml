<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- custom style for Title textview of MainActivity -->
    <style name="TilteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">27sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- custom style for relative layout of Main Activity-->
    <style name="CustomRelativeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:background">@color/material_dynamic_neutral_variant90</item>
    </style>

    <!-- custom style for button of Main Activity -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- custom style for second textview of Main Activity -->
    <style name="QuoteTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/material_dynamic_neutral_variant90</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- Custom style for description textview of MainActivity-->
    <style name="DescriptionTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/material_dynamic_neutral_variant90</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
</style>

    <!-- Custom style for navigating tabs of explore activity -->
    <style name="NavigateTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/TabTextApperance</item>
        <item name="android:background">@color/semi_transparent</item>
    </style>

    <!-- Text appearance for tabs of explore activity -->
    <style name="TabTextApperance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Custom style for Information List Imageview -->
    <style name="ImageViewStyle">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <!-- Custom style for Information List Title Textview -->
    <style name="CustomTitleTextview">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom style for Information List next Button Textview -->
    <style name="moreButton">
        <item name="android:textColor">#0277BD</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>
</resources>